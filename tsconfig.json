{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020",
      "es5" // Added for compatibility with Array methods like reverse
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
